extends layout.pug
block content
	.p-2.border
		form(action="/board/update", method="post")
			input(type="hidden" name="_method" value="put")
			input(type="hidden" name="id")
			div.p-2.form-inline
				input.form-control.mr-2(type="text" id="title" name="title")
				input.form-control.mr-2(type="text" id="writer" name="writer")
				input.form-control.mr-2(type="text" id="comment" name="comment")
				button.btn.btn-primary 수정
	table.table.table-bordered
		thead.thead-dark
			tr
				th 번호
				th 제목
				th 작성자
				th 작성일
				th 관리
		tbody
			each element in datas
				tr
					td= element.id
					td= element.title
					td= element.writer
					td= element.createdAt
					td
						button.btn.btn-sm.btn-danger(onclick=`location.href='/board/delete/${element.id}'`) 삭제
						button.btn.btn-sm.btn-success(onclick=`onChg(${element.id})`) 수정